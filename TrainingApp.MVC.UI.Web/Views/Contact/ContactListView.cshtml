@model ContactVM
<div class="bg-white ml-3 mr-3 mb-3 contact-container">
    <div class="container-fluid ml-3 mr-3 mt-3">
        <div class="row mt-3">
            <div class="col-8 d-flex justify-content-start align-items-center" id="btnContainer">
                <button class="btn active align-self-baseline mr-1" id="listViewBtn"><i class="fa fa-bars"></i> List</button>
                <button class="btn align-self-baseline" id="gridViewBtn"><i class="fa fa-th-large"></i> Grid</button>
                <div class="mb-3 ml-auto" id="btnContainer">
                    <button class="btn mr-2" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-filter" style="margin-right:0.1rem;"></i> Sort By
                        <i class="fa fa-chevron-down" style="margin-left:0.1rem;"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="Contact/Sort/?sort=Name">Name</a>
                        <a class="dropdown-item" href="Contact/Sort/?sort=Category">Category</a>
                        <a class="dropdown-item" href="Contact/Sort/?sort=Salary">Hourly Rate</a>
                    </div>
                </div>
            </div>
        </div>


        <div class="row no-gutters" id="outer-row" style="margin-right:inherit;">
            @foreach(var n in Model.ContactVMList)
            {
                <a href="/Contact/Detail/@n.Id" class="card col-xl-8 col-md-12 co-sm-12 col-12  mb-3 no-gutters" style="text-decoration:none; color:inherit;">
                    <div class="card-body" style="font-size:12px; font-weight:500;">
                        <div class="no-padding row align-items-center">
                            <img class="profile-img mr-2" src="data:image;base64,@System.Convert.ToBase64String(n.AvatarImageByte)" style="width:55px;height:45px;" alt="name" />
                            <div class="profile-name col-lg-auto col-md-auto col-sm-auto col-auto font-weight-bold">@string.Concat($"{n.FirstName} {n.LastName}")</div>
                            <div class="profile-email col-lg-auto col-md-auto col-sm-auto col-auto">@n.Email</div>
                            <div class="profile-hpNumber col-lg-auto col-md-auto col-sm-auto col-auto">@n.PhoneNumber</div>
                            <div class="profile-hourlyRate mr-3 col-lg-auto col-md-auto col-sm-auto col-auto"><span style="font-weight:700;">$@n.HourRate</span><span>/hr</span></div>
                            <div class="bg-light p-2 profile-role col-lg-auto col-md-auto col-sm-auto col-auto" style="border-radius:0.5rem;">@n.Category</div>
                            <!--<div class="p-2 profile-dots col-xl-auto col-auto" style="border:solid 1px black; border-radius:8px;"><i class="fa fa-ellipsis-h"></i></div>-->
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
    @Html.Partial("contactPagination", Model)
</div>



