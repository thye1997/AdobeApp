
<div class="modal fade add-contact-modal" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content  pt-2 pl-3 pr-3 pb-3">
            <div class="modal-header" style="margin-left:-1rem;">
                <h5 class="modal-title" style="font-size:14px;">Create New Contact</h5>
                <button type="button" class="close" id="close-addpatient-modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="userForm"> 
                <div class="mt-3 mb-3 d-flex justify-content-center" id="image-uploader-div">
                    <input type="file" id="image-uploader-input" style="display:none;" />
                    <div class="d-flex justify-content-center w-25 h-25 p-3" style="background-color:aliceblue; border-radius:10px;">
                        <i class="fa fa-3x fa-user-circle" id="user-icon-i" style="color:deepskyblue;"></i>
                        <img id="imgPreview" alt="pic" style="width:100px;height:100px; display:none;"/>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="form-group col">
                        <label for="InputNRIC">First Name<span style="color:red">*</span></label>
                        <input type="text" class="form-control" id="InputNRIC" name="nric" placeholder="eg. 999999-10-9999">
                    </div>
                    <div class="form-group col">
                        <label for="InputFullName">Last Name<span style="color:red">*</span></label>
                        <input type="text" class="form-control" id="InputFullName" name="fullName" placeholder="eg. Low Chen Thye">
                    </div>
                </div>
                <div class="form-group mt-2">
                    <label for="InputNRIC">Email<span style="color:red">*</span></label>
                    <input type="text" class="form-control" style="max-width:100%;" id="InputNRIC" name="nric" placeholder="eg. chenthye0825@hotmail.com">
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="InputPhoneNumber">Phone Number<span style="color:red">*</span></label>
                        <input type="text" class="form-control" id="InputPhoneNumber" name="phoneNumber" placeholder="eg. 018-123456789">
                    </div>
                    <div class="form-group col">
                        <label for="Inputbirthday">Date of Birth<span style="color:red">*</span></label>
                        <input type="text" class="form-control" id="Inputbirthday" name="DOB">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label for="InputGender1">Gender<span style="color:red">*</span></label>
                        <select class="custom-select" id="genderSelect" name="Gender">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>
                <span class="d-block" id="genderErr" style="margin-top:-16px; color:red;"></span>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-light mr-auto">Cancel</button>
                    <button type="submit" class="btn" style="background: #8173FE; color:white;">Add Contact</button>
                </div>
            </form>
        </div>
    </div>
</div>
